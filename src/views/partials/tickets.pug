mixin tickets
  .tickets
    ul.tickets__steps
      li.tickets__steps-item.tickets__steps-item_fill 
        span.tickets__steps-item-text 1
      li.tickets__steps-item
        span.tickets__steps-item-text 2
      li.tickets__steps-item 
        span.tickets__steps-item-text 3
    ul.tickets__list 
      - let i = 0
      while i< 5
        - i++
        li.tickets__item
          .tickets__item-content
            .tickets__item-date 
              span.tickets__item-date-num 31
              span.tickets__item-date-text Мар 
            .tickets__item-text-block 
              h3.tickets__item-name Гамбург
              ul.tickets__item-info 
                li.tickets__item-info-item 
                  svg.tickets__item-info-icon(viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                    path(stroke="currentColor", stroke-width="1.5", stroke-miterlimit="10", d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z")
                    path(stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round" d="M12 6.75V12H17.25")
                  span.tickets__item-info-text 20:00
                li.tickets__item-info-item 
                  svg.tickets__item-info-icon(viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                    path(stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round", d="M5.25 21.75H18.75")
                    path(stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round", d="M12 12.75C13.6569 12.75 15 11.4069 15 9.75C15 8.09315 13.6569 6.75 12 6.75C10.3431 6.75 9 8.09315 9 9.75C9 11.4069 10.3431 12.75 12 12.75Z")
