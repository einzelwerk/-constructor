extends ../../layouts/main

block vars
  - const cssName = 'newsletter-2';
  - const jsName = 'newsletter-2';

block content
  include ../../partials/checkbox

  // Добавить к block класс block_dark
  // Заменить класс btn_black на btn_white
  section.newsletter.section.block
    .newsletter__container.container
      .newsletter__content
        .newsletter__text-block 
          h2.newsletter__title Join 2,000+ subscribers
          p.newsletter__desc Stay in the loop with everything you need to know.
        .newsletter__form-block
          form.newsletter__form(action="#") 
            .field.field_large
              label.visually-hidden(for="#newsletter-email") 
              input#newsletter-email(type="email" placeholder="Enter your email")
            button.btn.btn_large.btn_black(type="submit") Subscribe 
          span.newsletter__text We care about your data in our privacy policy.

    
    