extends ../../layouts/main

block vars
  - const groupName = 'newsletter';
  - const cssName = 'newsletter-2';
  - const jsName = 'newsletter-2';

block content
  include ../../partials/checkbox

  // Добавить к block класс block_dark
  // Заменить класс btn_black на btn_white
  section.newsletter-2.section.block
    .newsletter-2__container.container
      .newsletter-2__content
        .newsletter-2__text-block 
          h2.newsletter-2__title Join 2,000+ subscribers
          p.newsletter-2__desc Stay in the loop with everything you need to know.
        .newsletter-2__form-block
          form.newsletter-2__form(action="#") 
            .field.field_large
              label.visually-hidden(for="#newsletter-email") 
              input#newsletter-email(type="email" placeholder="Enter your email")
            button.btn.btn_large.btn_black(type="submit") Subscribe 
          span.newsletter-2__text We care about your data in our privacy policy.

    
    