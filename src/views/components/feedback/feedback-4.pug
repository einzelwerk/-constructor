extends ../../layouts/main

block vars
  - const groupName = 'feedback';
  - const cssName = 'feedback-4';
  //- - const jsName = 'feedback-4';

block content
  include ../../partials/checkbox

  section.feedback-4.section.block
    .feedback-4__container.container
      .row.feedback-4__list
        .col-6.col-xl-7.col-lg.feedback-4__item-order 
          .feedback-4__content 
            .feedback-4__text-block 
              h2.feedback-4__title Get in touch
              p.feedback-4__desc Our friendly team would love to hear from you.
            form.feedback-4__form(action="#") 
              .feedback-4__field-block
                .feedback-4__field-block-row
                  .feedback-4__field.field.field_medium
                    label(for="feedback-name") First name 
                    input#feedback-name(type="text" placeholder="Name")
                  .feedback-4__field.field.field_medium
                    label(for="feedback-surname") Last name
                    input#feedback-surname(type="text" placeholder="Surname")
                .feedback-4__field.field.field_medium
                  label(for="feedback-email") Email
                  input#feedback-email(type="email" placeholder="Email")
                .feedback-4__field.field.field_medium
                  label(for="feedback-tel") Phone number
                  input#feedback-tel(type="tel" placeholder="Phone number")
                .feedback-4__field.field.field_medium.feedback-4__textarea
                  label(for="feedback-message") Message
                  textarea#feedback-message(name="message" placeholder="Message" rows="1")
              .feedback-4__bottom 
                +checkbox
                button.feedback-4__btn.btn.btn_large.btn_black(type="submit") Send message
        .col-6.col-xl-5.col-lg
          picture.feedback-4__img-wrap
            img.feedback-4__img(src="@/assets/images/feedback/img-3.jpg" alt="")

