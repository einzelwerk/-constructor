extends ../../layouts/main

block vars
  - const groupName = 'cards';
  - const cssName = 'cards-2';
  - const jsName = 'cards-2';

block content
  // Для добавления паддинга и заливки у элементов добавь элементу с классом cards-2__item класс cards-2__item_fill
  section.cards-2.section.block
    .cards-2__container.container
      .cards-2__text-block
        .cards-2__title-block
          span.cards-2__subtitle.subtitle 404 error
          h2.cards-2__title Ближайшие события 
        p.cards-2__desc Спешите приобрести билеты на самые актуальные события этой недели. Следите за анонсами!
      .cards-2__desktop
        ul.cards-2__list 
          - let i = 0
          while i < 6
            - i++ 
            li.cards-2__item.cards-2__item_fill
              .cards-2__img-wrap
                img.cards-2__img(src="@/assets/images/cards/cards-2.jpg" alt="")
              .cards-2__content 
                span.cards-2__name Анатолий Белый   
                span.cards-2__slogan "Я здесь!"
                span.cards-2__date 1 апреля 2023 - 31 мая 2023
                ul.cards-2__badge
                  li.cards-2__badge-item Кёльн
                  li.cards-2__badge-item Гамбург
                  li.cards-2__badge-item Берлин
                  li.cards-2__badge-item +3
              button.cards-2__btn.btn.btn_medium.btn_black
                svg.btn__icon(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M9.60547 11.6665L6.39794 7.99983L9.60547 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
                | Button 
                svg.btn__icon(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M6.39453 11.6665L9.60206 7.99983L6.39453 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
      .cards-2__mobile
        .swiper.cards-2__slider-block
          .swiper.cards-2__slider 
            ul.swiper-wrapper 
              - let j = 0
              while j < 6
                - j++ 
                li.swiper-slide
                  .cards-2__item.cards-2__item_fill
                    .cards-2__img-wrap
                      img.cards-2__img(src="@/assets/images/cards/cards-2.jpg" alt="")
                    .cards-2__content 
                      span.cards-2__name Анатолий Белый   
                      span.cards-2__slogan "Я здесь!"
                      span.cards-2__date 1 апреля 2023 - 31 мая 2023
                      ul.cards-2__badge
                        li.cards-2__badge-item Кёльн
                        li.cards-2__badge-item Гамбург
                        li.cards-2__badge-item Берлин
                        li.cards-2__badge-item +3
                    button.cards-2__btn.btn.btn_medium.btn_black
                      svg.btn__icon(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                        path(d="M9.60547 11.6665L6.39794 7.99983L9.60547 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
                      | Button 
                      svg.btn__icon(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
                        path(d="M6.39453 11.6665L9.60206 7.99983L6.39453 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
            .cards-2__slider-btn-block
              button.cards-2__slider-btn.cards-2__slider-btn_prev.btn-arrow(type="button")
                svg.btn-arrow__icon(viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                  path(d="M20.25 12H3.75", stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round")
                  path(d="M10.5 5.25L3.75 12L10.5 18.75", stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round")
              button.cards-2__slider-btn.cards-2__slider-btn_next.btn-arrow(type="button")
                svg.btn-arrow__icon(viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                  path(d="M3.75 12H20.25", stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round")
                  path(d="M13.5 5.25L20.25 12L13.5 18.75", stroke="currentColor", stroke-width="1.5", stroke-linecap="round", stroke-linejoin="round")            
      button.cards-2__more
        svg(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
          path(d="M9.60547 11.6665L6.39794 7.99983L9.60547 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
        | Button 
        svg(viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
          path(d="M6.39453 11.6665L9.60206 7.99983L6.39453 4.33317" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round")
      