extends ../../layouts/main

block vars
  - const groupName = 'error';
  - const cssName = 'error-1';
  //- - const jsName = 'error-1';

block content
  // Добавить к block класс block_dark
  // Заменить класс btn_black на btn_white
  // Заменить класс btn_trs-black на btn_trs-white
  section.error-1.section.block
    .error-1__container.container 
      .row.error-1__list
        .col-6.col-lg.error-1__item-order
          .error-1__content 
            .error-1__text-block 
              h2.error-1__title Page not found
              .error-1__desc 
                p Sorry, the page you are looking for doesn't exist.
                p Here are some helpful links:
            .error-1__btn-block 
              button.btn.btn_large.btn_trs-black(type="button") Learn more 
              button.btn.btn_large.btn_black(type="button") Take me home 
        .col-6.col-lg
          picture.error-1__img-wrap 
            img.error-1__img(src="@/assets/images/error/error-1.jpg" alt="")