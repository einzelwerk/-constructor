extends ../../layouts/main

block vars
  - const cssName = 'hero-2';
  //- - const jsName = 'hero-2';

block content
  // Добавить к block класс block_dark
  // Заменить класс btn_trs-black на btn_trs-white
  // Заменить класс btn_black на btn_white
  section.hero.section.block
    .hero__container.container
      .hero__content
        .hero__text-block
          h2.hero__title We design digital experiences that create more happy in the world
          p.hero__desc — We’re a full-service design and development agency who specialise in simple, useful and beautiful solutions.
        .hero__btn-block
          a.hero__btn.btn.btn_large.btn_trs-black(href="#")
            svg.btn__icon(viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
              path(d="M6 18L18 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
              path(d="M8.25 6H18V15.75" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
            | Showreel
          button.hero__btn.btn.btn_large.btn_black(type="button") Get in touch
      picture.hero__poster-wrap
        img.hero__poster(src="@/assets/img/hero/bg-2.jpg", alt="")


