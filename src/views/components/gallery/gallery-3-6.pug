              img.gallery-3-6__img(src="@/assets/images/gallery/4/item-9.jpg", alt="")
      .gallery-3-6__slider-block
        .swiper.gallery-3-6__slider
          ul.swiper-wrapper 
            - let i = 0;
            while i < 11
              - i++  
              li.swiper-slide
                a.gallery-3-6__link(data-fslightbox="gallery-3-6" href="https://placehold.co/1200x600")
                  picture.gallery-3-6__img-wrap
                    img.gallery-3-6__img(src="https://placehold.co/500x400", alt="") 
